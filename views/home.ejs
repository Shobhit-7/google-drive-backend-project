<!doctype html>
<html class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

   
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css"
      rel="stylesheet"
    />

    <title>Upload File</title>
  </head>

  <body class="bg-gray-50 dark:bg-gray-900">
   
    <nav class="bg-white border-gray-200 dark:bg-gray-900 dark:border-gray-700">
      <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">
            MEN-DRIVE
          </span>
        </a>
        <div class="flex gap-3">
          
          <a
            href="/user/logout"
            class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-200 font-medium rounded-lg text-sm px-4 py-2 dark:focus:ring-red-900"
          >
            Logout
          </a>
        </div>
      </div>
    </nav>

    <section class="py-12 px-4">
      <div class="max-w-3xl mx-auto">

        <% if (error) { %>
          <div class="flex items-center p-4 mb-6 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 border border-red-200 dark:border-gray-700">
            ❌ Error: <%= error %>
          </div>
        <% } %>

        <% if (success === "1") { %>
          <div id="alert-success" class="flex items-center p-4 mb-6 text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 border border-green-200 dark:border-gray-700" role="alert">
            <svg class="flex-shrink-0 w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M16.707 5.293a1 1 0 0 1 0 1.414l-8.414 8.414a1 1 0 0 1-1.414 0L3.293 11.707a1 1 0 1 1 1.414-1.414l2.586 2.586 7.707-7.707a1 1 0 0 1 1.414 0Z"/>
            </svg>
            <div class="text-sm font-medium">
              ✅ Upload successful!
              <% if (fileUrl) { %>
                <a href="<%= fileUrl %>" target="_blank" class="underline font-semibold ms-2">Open file</a>
              <% } %>
            </div>
            
            <button type="button"
              class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-100 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700"
              onclick="document.getElementById('alert-success').style.display='none'">
              <span class="sr-only">Close</span>
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 12 12M13 1 1 13"/>
              </svg>
            </button>
          </div>
        <% } else if (success === "deleted") { %>
          <div class="flex items-center p-4 mb-6 text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 border border-green-200 dark:border-gray-700">
            ✅ File deleted successfully!
          </div>
        <% } %>

       
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow p-6 mb-10">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Upload File</h2>
          </div>

          <form action="/upload-file" method="POST" enctype="multipart/form-data" class="space-y-5">
            <div>
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file">
                Choose a file
              </label>
              <input
                id="file"
                name="file"
                type="file"
                required
                class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
              />
            </div>

            <button
              type="submit"
              class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >
              Upload File
            </button>
          </form>
        </div>

       
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow p-6">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            Upload History
          </h3>

          <% if (!files || files.length === 0) { %>
            <p class="text-gray-600 dark:text-gray-400">No files uploaded yet.</p>
          <% } else { %>
            <div class="space-y-3">
              <% files.forEach((f) => { %>
                <div class="flex items-center justify-between p-4 border rounded-lg dark:border-gray-700">
                  <div>
                    <p class="font-semibold text-gray-900 dark:text-white">
                      <%= f.originalName %>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      Uploaded: <%= new Date(f.createdAt).toLocaleString() %>
                    </p>
                  </div>

                  <div class="flex gap-2">
                    <a
                      href="<%= f.url %>"
                      target="_blank"
                      class="text-white bg-green-600 hover:bg-green-700 font-medium rounded-lg text-sm px-4 py-2"
                    >
                      Open
                    </a>
                    <form action="/delete-file/<%= f._id %>" method="POST">
                      <button
                        type="submit"
                        class="text-white bg-red-600 hover:bg-red-700 font-medium rounded-lg text-sm px-4 py-2"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>

      </div>
    </section>

   
    <script src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"></script>

  </body>
</html>
